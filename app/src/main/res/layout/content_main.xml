<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.com.emanoel.oliveira.sextodecoracoes.activities.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/borda_branco"
        android:padding="4dp"
        android:text="@string/title_modelo"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

    <ImageView
        android:id="@+id/iv_main"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/borda_branco"
        app:srcCompat="@drawable/chair" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/iv_main"
        android:layout_marginTop="32dp"
        android:background="@color/gelo">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvTexturas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

        </android.support.v7.widget.RecyclerView>


    </RelativeLayout>

</RelativeLayout>
